extends layout

block content
    hr
    .container
        form#homeform.input-group.input-group-lg(method='post', action='/')
            span.glyphicon.glyphicon-search.input-group-addon
            input.form-control(type='search', placeholder='Search', name='searchstring')
        hr
        .row(align='center', style=' background-color: aqua')
            .col-lg-4
                h4
                    strong Khách hàng
            .col-lg-4
                h4
                    strong Số điện thoại
            .col-lg-4
                h4
                    strong Địa chỉ

    //Whenever user hit Enter, the search form will submit the search string
    script.
        $('input').keypress(function (event) {
            if (event.keyCode === 13) {
                $('#homeform').submit();
            }
        })