extends layout

block content
    form.form-group
        .input-group
            span.input-group-addon Nguyên liệu
            input.form-control(type='text', placeholder='Mua cái gì nè', name='material')
        .input-group
            span.input-group-addon Số lượng
            input.form-control(type='number', placeholder='Mua bao nhiêu ta ?', name='quantity')
            select.selectpicker(name="unit")
                option KG
                option Gam
                option Cái
                option Bịch
                option Quả
        .input-group
            span.input-group-addon Địa chỉ
            input.form-control(type='text', placeholder='Mua ở đâu nhỉ', name='shopaddress')
        .input-group
            span.input-group-addon Giá thành
            input.form-control(type='number', placeholder='Hết bao nhiêu :(', name='price')
            span.input-group-addon x1000 VNĐ
        hr
        .col-sm-4.col-sm-offset-4
            button.btn.btn-success.btn-lg.btn-block(type='submit', formaction='/cost', formmethod='post') Submit